@{
    ViewData["Title"] = "Order Success";
}

<div class="d-flex justify-content-center align-items-center mb-3 mt-3">
    <h1>Thank you for your purchase!</h1>
</div>
<hr class="mb-5" />

<div class="d-flex justify-content-center align-items-center text-center px-3">
    <div class="col-md-8 mb-3">
        <div class="alert alert-success shadow p-5 rounded">
            <h1 class="alert-heading fw-bold mb-4">
                <i class="fas fa-circle-check me-3 text-success"></i>Order Successful
            </h1>
            <h4 class="mb-4">
                We have received your order.<br />
                Your order number is <strong>@TempData["OrderNumber"]</strong>.
            </h4>
            <hr>
            <h5 class="mb-4">
                You can view your order details in your order list.
            </h5>
            <a asp-controller="Account" asp-action="Manage" asp-route-page="Orders" class="btn btn-success btn-lg rounded-pill px-4">
                View Your Orders
            </a>
        </div>
    </div>
</div>