@{
    ViewData["Title"] = "Reset password confirmation";
}

<div class="d-flex justify-content-center align-items-center mb-3 mt-3">
    <h1>@ViewData["Title"]</h1>
</div>
<hr class="mb-5" />

<div class="d-flex flex-column justify-content-center align-items-center my-5">
    <div class="card col-md-8 p-5 shadow-lg rounded-4 border-0">
        <div class="text-center mb-3">
            <i class="bi bi-unlock-fill text-primary d-block display-5 mb-4"></i>

            <h3 class="fw-semibold text-primary mb-3">
                Your password has been reset.
            </h3>

            <h4 class="text-primary mb-4">
                Please, click the log in button and you will be redirected to the log in page.
            </h4>
        </div>

        <div class="text-center">
            <a asp-controller="Account" asp-action="LogIn"
               class="btn btn-outline-primary btn-lg px-5 rounded-pill fw-semibold shadow-sm mx-auto">
                Log in
            </a>
        </div>
    </div>
</div>