@using BookWebStore.ViewModels
@model ErrorViewModel

@{
    ViewData["Title"] = "Error";
    bool isAdminUser = User.IsInRole("Administrator");
}

<div class="d-flex justify-content-center align-items-center mb-3 mt-3">
    <h1>@ViewData["Title"]</h1>
</div>
<hr class="mb-5" />

<div class="d-flex flex-column justify-content-center align-items-center">
    <div class="col-md-7 text-center">
        <h2 class="text-danger mb-4">Unfortunately, something went wrong.</h2>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger mb-4">@Model.ErrorMessage</div>
        }
        else
        {
            <div class="alert alert-danger mb-4">
                An error occurred while processing your request. Please try again later.
            </div>
        }

        @*Show RequestId only if the user is in role of an administrator*@
        @if (Model.ShowRequestId && isAdminUser)
        {
            <div class="d-flex justify-content-center align-items-center gap-3 mb-4">
                <div>
                    <h5>Request ID:</h5>
                </div>
                <div class="alert alert-secondary mb-0 py-2" role="alert">
                    <p class="mt-2 mb-2" style="font-family: monospace;">@Model.RequestId</p>
                </div>
            </div>
        }

        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to homepage</a>
    </div>
</div>