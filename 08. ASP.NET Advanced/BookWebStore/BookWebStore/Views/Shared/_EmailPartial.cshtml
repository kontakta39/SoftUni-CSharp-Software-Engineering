@using BookWebStore.ViewModels
@model EmailViewModel

@{
    ViewData["Title"] = "Manage еmail";
}

<h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-6">
        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3 input-group">
                <input asp-for="@Model.CurrentEmail" class="form-control" placeholder="Please enter your email." disabled />
                    <div class="input-group-append">
                        <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                    </div>
                <label asp-for="@Model.CurrentEmail" class="form-label">Current mail</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.NewEmail" class="form-control" autocomplete="email" aria-required="true" placeholder="Please enter new email." />
                <label asp-for="@Model.NewEmail" class="form-label">New еmail</label>
                <span asp-validation-for="@Model.NewEmail" class="text-danger"></span>
            </div>
            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="w-100 btn btn-lg btn-primary">Change email</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}