@using BookWebStore.ViewModels
@model ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="@Model.Username" class="form-label">Username</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="@Model.PhoneNumber" class="form-label">Phone number</label>
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}