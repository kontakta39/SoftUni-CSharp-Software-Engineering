@using BookWebStore.ViewModels
@model GenreDeleteViewModel

@{
    ViewData["Title"] = "Delete genre";
}

<div class="d-flex justify-content-center align-items-center">
    <h1>@ViewData["Title"]</h1>
</div>
<hr class="mb-5" />

<div class="d-flex justify-content-center align-items-center mb-5">
    <div class="col-md-6">
        <div class="alert alert-danger shadow-lg rounded-4 border-0 p-4 text-center">
            <h2 class="mb-4">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirm delete
            </h2>

            <p class="fs-5 mb-4">
                Are you sure you want to delete the genre <strong>"@Model.Name"</strong>?
            </p>

            <div class="d-flex justify-content-center gap-3">
                <form asp-action="Delete" method="post" class="m-0">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Name" />

                    <button id="delete-genre" type="submit" class="btn btn-danger btn-lg rounded-pill px-5">
                        <i class="bi bi-trash3 me-2"></i>Delete
                    </button>
                </form>

                <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill px-5 align-self-center">
                    <i class="bi bi-x-circle me-2"></i>Cancel
                </a>
            </div>
        </div>
    </div>
</div>