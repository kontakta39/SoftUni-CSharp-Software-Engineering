@using BookWebStore.ViewModels
@model GenreEditViewModel

@{
    ViewData["Title"] = "Edit genre";
}

<div class="d-flex justify-content-center align-items-center">
    <h1>@ViewData["Title"]</h1>
</div>
<hr class="mb-5" />

<div class="d-flex flex-column justify-content-center align-items-center">
    <div class="col-md-5">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" aria-required="true" placeholder="Please enter genre name." />
                <label asp-for="Name">Genre Name</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <button id="edit-genre" type="submit" class="w-100 btn btn-lg btn-primary">Edit</button>
        </form>
    </div>
</div>