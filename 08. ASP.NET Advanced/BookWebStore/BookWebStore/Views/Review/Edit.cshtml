@using BookWebStore.ViewModels
@model ReviewEditViewModel

@{
    ViewData["Title"] = "Edit review";
}

<div class="d-flex justify-content-center align-items-center">
    <h1>@ViewData["Title"]</h1>
</div>
<hr class="mb-5" />

<div class="d-flex justify-content-center align-items-center my-5">
    <div class="card col-md-5 p-4 shadow-lg rounded-4 border-0">
        <h2 class="text-center mb-4">
            <i class="bi bi-pencil-square text-primary me-2"></i>Edit your review
        </h2>

        <form asp-action="Edit" method="post" novalidate>
            <input type="hidden" asp-for="BookId" />
            <input type="hidden" asp-for="BookTitle" />

            <div class="form-floating mb-3">
                <input asp-for="BookTitle" class="form-control" disabled placeholder="Book title" />
                <label asp-for="BookTitle">You are writing a review for the book:</label>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="Rating" class="form-select" aria-required="true">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <option value="@i">@i star@(i > 1 ? "s" : "")</option>
                    }
                </select>
                <label asp-for="Rating">Rating*</label>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <textarea asp-for="ReviewText" class="form-control h-auto" aria-required="true" rows="6" placeholder="Tell us what you think about the book..."></textarea>
                <label asp-for="ReviewText">Review*</label>
                <span asp-validation-for="ReviewText" class="text-danger"></span>
            </div>

            <button id="edit-review" type="submit" class="w-100 btn btn-lg btn-primary rounded-pill">
                <i class="bi bi-save me-2"></i>Edit Review
            </button>
        </form>
    </div>
</div>