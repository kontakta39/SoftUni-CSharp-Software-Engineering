@using BookWebStore.ViewModels
@model IEnumerable<BookIndexViewModel>

@{
    ViewData["Title"] = "Books";
    string? searchTerm = ViewData["SearchTerm"] as string;
    bool isSearchWithNoResults = ViewData["NoResultsMessage"] != null;
}

@if (TempData["ErrorMessage"] != null)
{
    <div id="errorAlert" class="alert alert-danger text-center">
        <p class="m-0">@TempData["ErrorMessage"]</p>
    </div>
    <script>setTimeout(() => { const e=document.getElementById('errorAlert'); if(e){ e.style.transition='opacity 0.5s'; e.style.opacity='0'; setTimeout(() => e.remove(), 500); } }, 3000);</script>
}

<div class="d-flex justify-content-between align-items-center">
    <h1>@ViewData["Title"]</h1>
    @if (User.IsInRole("Administrator"))
    {
        <a asp-controller="Book" asp-action="Add" class="btn btn-primary rounded-pill">
            <i class="fas fa-plus me-1"></i> Add book
        </a>
    }
</div>
<hr class="mb-4" />

@if (!Model.Any() && !isSearchWithNoResults)
{
    <h3 class="text-start">We currently have no books available for sale.</h3>
}
else
{
    <div class="d-flex justify-content-center mb-5">
        <div class="col-md-7">
            <div class="d-flex justify-content-center gap-3">
                <form asp-controller="Book" asp-action="Index" method="get" class="d-flex align-items-center gap-2 w-100">
                    <input type="text"
                           name="searchTerm"
                           class="form-control form-control-lg shadow-sm border-primary rounded-3"
                           value="@searchTerm"
                           placeholder="Search books..." />

                    <button type="submit" class="btn btn-lg btn-primary shadow-sm rounded-3 px-4 d-flex align-items-center gap-2">
                        <i class="fas fa-search me-1"></i> Search
                    </button>
                </form>

                @if (!string.IsNullOrWhiteSpace(searchTerm))
                {
                    <a asp-controller="Book" asp-action="Index" class="btn btn-lg btn-danger shadow-sm rounded-3 px-4">
                        <i class="fas fa-times me-1"></i> Clear
                    </a>
                }
            </div>
        </div>
    </div>

    @if (isSearchWithNoResults)
    {
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="alert alert-secondary text-center shadow-sm bg-light rounded-4 p-5">
                    <i class="fas fa-search fa-3x text-primary mb-3"></i>
                    <h4 class="mb-3">@ViewData["NoResultsMessage"]</h4>
                    <h5 class="text-muted mb-4">No books matched your search. You can try a new term or browse all books.</h5>
                    <a asp-controller="Book" asp-action="Index" class="btn btn-primary btn-lg rounded-pill">
                        <i class="fas fa-arrow-left me-2"></i> Back to the book store
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        List<IGrouping<string, BookIndexViewModel>> groupedBooks = Model
           .OrderBy(b => b.Title)
           .GroupBy(b => b.Title.Substring(0, 1).ToUpper()) //group by first letter
           .OrderBy(b => b.Key) //sorting groups by letter
           .ToList();

        foreach (var group in groupedBooks)
        {
            <h3 class="text-start mt-5 text-dark">Books starting with letter "<strong>@group.Key</strong>"</h3>
            <hr class="mb-4 border-primary" />

            <div class="row g-5">
                @foreach (var book in group.OrderBy(b => b.Title))
                {
                    <div class="col-sm-6 col-md-3">
                        <div class="card shadow-sm border-1 bg-secondary bg-opacity-10">
                            <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id" class="text-decoration-none">
                                <div class="pt-4 pb-2">
                                    <img src="@(!string.IsNullOrEmpty(book.ImageUrl) ? book.ImageUrl : Url.Content("~/img/book-no-image-available.jpg"))"
                                            class="img-fluid rounded mx-auto d-block"
                                            style="max-height: 300px; object-fit: contain;"
                                            alt="Book Image Not Available"
                                            onerror="this.onerror=null; this.src='@Url.Content("~/img/book-no-image-available.jpg")';" />
                                </div>

                                <div class="card-body text-center pt-1 pb-0">
                                    <h5 class="card-title text-dark fw-semibold mb-2">@book.Title</h5>
                                    <h6 class="card-subtitle text-muted mb-4">@book.Author</h6>
                                </div>
                            </a>

                            <form asp-controller="Order" asp-action="AddToCart" asp-route-bookId="@book.Id" method="post" class="text-center mb-4">
                                <button type="submit" class="btn btn-success rounded-pill px-4">
                                    <i class="bi bi-cart-plus me-1"></i> Buy
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        }
    }
}