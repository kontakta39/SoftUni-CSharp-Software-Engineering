@using BookWebStore.ViewModels
@using Microsoft.AspNetCore.Identity
@model BookDetailsViewModel
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Book information";
    ApplicationUser? user = await UserManager.GetUserAsync(User);
    bool hasUserReviewed = Model.Reviews.Any(r => r.UserId == user?.Id);
}

@if (TempData["ErrorMessage"] != null)
{
    <div id="errorAlert" class="alert alert-danger text-center">
        <p class="m-0">@TempData["ErrorMessage"]</p>
    </div>
    <script>setTimeout(() => { const e=document.getElementById('errorAlert'); if(e){ e.style.transition='opacity 0.5s'; e.style.opacity='0'; setTimeout(() => e.remove(), 500); } }, 3000);</script>
}

<div class="d-flex justify-content-center align-items-center mb-3 mt-3">
    <h1>@ViewData["Title"]</h1>
</div>
<hr class="mb-5" />

<div class="container my-5">
    <div class="row justify-content-center gx-5 align-items-center">

        <div class="col-md-4 text-center mb-4 mb-md-0">
            <img src="@(!string.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl : Url.Content("~/img/book-no-image-available.jpg"))"
                class="img-fluid rounded shadow"
                style="max-height: 400px; width: auto;"
                alt="Book Image Not Available"
                onerror="this.onerror=null; this.src='@Url.Content("~/img/book-no-image-available.jpg")';" />
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm p-4 h-100">
                <h2 class="card-title mb-3">@Model.Title</h2>
                <hr />

                <h5 class="card-subtitle mb-2">
                    Author:
                    <a asp-controller="Author" asp-action="Details" asp-route-id="@Model.AuthorId" class="text-decoration-none">
                        @Model.Author
                    </a>
                </h5>

                <h6 class="text-muted mb-2">Publisher: @Model.Publisher</h6>
                <h6 class="text-muted mb-2">Genre: @Model.Genre</h6>
                <h6 class="text-muted mb-2">Release Year: @Model.ReleaseYear</h6>
                <h6 class="text-muted mb-3">Pages: @Model.PagesNumber</h6>

                <div class="d-flex gap-3 mb-3">
                    <div class="w-50 border border-2 border-dark rounded p-2 text-center">
                        @if (Model.Stock > 1)
                        {
                            <span class="fw-semibold text-success">In stock: @Model.Stock copies</span>
                        }
                        else if (Model.Stock == 1)
                        {
                            <span class="fw-semibold text-danger">Only 1 copy left</span>
                        }
                        else
                        {
                            <span class="fw-semibold text-dark">Out of stock</span>
                        }
                    </div>

                    <div class="w-50 border border-2 border-dark rounded p-2 text-center">
                        <span class="fw-semibold text-dark">Price: @Model.Price lv.</span>
                    </div>
                </div>

                <hr />

                <div class="row justify-content-center gx-3">
                    @if (Model.Stock > 0)
                    {
                        <div class="col-md-5 text-center">
                            <form asp-controller="Order" asp-action="AddToCart" asp-route-bookId="@Model.Id" method="post">
                                <button type="submit" class="btn btn-success rounded-pill w-100">
                                    <i class="bi bi-cart-plus me-1"></i> Buy
                                </button>
                            </form>
                        </div>
                    }

                    @if (User.IsInRole("Administrator") || User.IsInRole("Moderator"))
                    {
                        <div class="col-md-5 text-center">
                            <a asp-controller="Book" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary rounded-pill w-100">
                                <i class="bi bi-pencil-square me-1"></i> Edit
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (!Model.IsDeleted)
{
    <section class="mb-5">
        <div class="mb-4">
            <h2 class="fw-bold border-bottom pb-3">Book Reviews</h2>
        </div>

        @if (!Model.Reviews.Any())
        {
            <div class="p-5 my-5 bg-warning-subtle text-center border-start border-5 border-warning rounded-3 shadow-lg w-75 mx-auto">
                <h4 class="text-dark mb-4">
                    <i class="bi bi-chat-left-dots-fill text-dark me-2"></i>
                    No reviews yet. Be the first to write one!
                </h4>

                @if (!hasUserReviewed)
                {
                    <a asp-controller="Review" asp-action="Add" asp-route-bookId="@Model.Id"
                       class="btn btn-warning btn-lg px-4 rounded-pill shadow-lg">
                        <i class="bi bi-pencil-fill me-1"></i> Write a review
                    </a>
                }
            </div>
        }
        else
        {
            @if (User?.Identity?.IsAuthenticated == false)
            {
                <div class="alert alert-info d-flex align-items-center justify-content-between w-75 mb-5 rounded-4 shadow-sm mx-auto">
                    <div class="p-3">
                        <h4 class="mb-2">@Model.Reviews.Count() people have reviewed this book.</h4>
                        <h5 class="text-muted">Log in to your account to read their reviews.</h5>
                    </div>

                    <div class="p-3">
                        <a asp-controller="Account" asp-action="LogIn" class="btn btn-outline-primary rounded-pill btn-lg px-4">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Log In
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="d-flex flex-wrap align-items-center justify-content-between mb-4 gap-3">
                    <div>
                        <h5 class="text-muted mb-0">
                            <strong>Total reviews:</strong> @Model.Reviews.Count() &nbsp;|&nbsp;
                            <strong>Average rating:&nbsp;</strong>
                            <span class="text-warning">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= Math.Round(Model.Reviews.Average(r => r.Rating)))
                                    {
                                        <i class="bi bi-star-fill"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-star"></i>
                                    }
                                }
                            </span>
                            <span class="ms-1">(@Model.Reviews.Average(r => r.Rating).ToString("F1"))</span>
                        </h5>
                    </div>

                    @if (hasUserReviewed)
                    {
                        <div class="alert alert-warning d-flex align-items-center py-2 px-3 rounded">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            <h6 class="m-0">You have already added a review for this book.</h6>
                        </div>
                    }
                    else
                    {
                        <a asp-controller="Review" asp-action="Add" asp-route-bookId="@Model.Id" class="btn btn-warning btn-lg rounded-pill shadow">
                            <i class="bi bi-pencil-square me-1"></i> Add review
                        </a>
                    }
                </div>

                <div class="d-flex flex-column">
                    @foreach (var review in Model.Reviews)
                    {
                        <div class="card col-md-6 rounded-4 shadow-sm p-4 bg-secondary bg-opacity-10">
                            <div class="d-flex align-items-center gap-3 mb-3">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center fw-bold fs-4 p-3" style="width: 50px; height: 50px;">
                                    @review.FirstName.Substring(0,1)@review.LastName.Substring(0,1)
                                </div>
                                <div>
                                    <h5 class="mb-1 fw-semibold">@review.FirstName @review.LastName</h5>
                                    <h6 class="text-muted fst-italic">
                                        @(review.IsEdited ? "Edited on:" : "Published on:") @review.ReviewDate.ToString("dd MMM yyyy")
                                    </h6>
                                </div>
                            </div>

                            <div class="d-flex align-items-center mb-3">
                                <div class="text-warning fs-5 me-2">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= review.Rating)
                                        {
                                            <i class="bi bi-star-fill"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-star"></i>
                                        }
                                    }
                                </div>
                                <span class="text-muted fs-6">@review.Rating @(review.Rating == 1 ? "star" : "stars")</span>
                            </div>

                            <p class="fs-5 mb-3">@review.ReviewText</p>

                            @if (review.UserId == user?.Id && !review.IsEdited)
                            {
                                <a asp-controller="Review" asp-action="Edit" asp-route-bookId="@review.BookId" class="btn btn-outline-primary rounded-pill w-25">
                                    <i class="bi bi-pencil-fill me-1"></i> Edit review
                                </a>
                            }
                            else if (review.UserId == user?.Id && review.IsEdited)
                            {
                                <div class="alert alert-primary d-flex me-auto py-2 px-3 mb-0 w-auto">
                                    <i class="bi bi-info-circle-fill me-2"></i> You have already edited your review.
                                </div>
                            }
                        </div>
                    }
                </div>
            }
        }
    </section>
}