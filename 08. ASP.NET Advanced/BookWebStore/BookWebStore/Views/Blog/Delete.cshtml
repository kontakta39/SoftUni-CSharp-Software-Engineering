@using BookWebStore.ViewModels
@model BlogDeleteViewModel

@{
    ViewData["Title"] = "Delete Blog";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm border-danger">
                <div class="card-body text-center">
                    <h1 class="mb-4 text-danger">@ViewData["Title"]</h1>
                    <p class="lead mb-4">
                        Are you sure you want to delete the blog
                        <strong class="text-dark">"@Model.Title"</strong>
                        which was created by
                        <strong class="text-dark">@Model.Publisher</strong>?
                    </p>

                    <div class="d-flex justify-content-center gap-3 mt-3">
                        <form asp-action="Delete" method="post" class="m-0">
                            <input type="hidden" asp-for="Id" />
                            <button id="delete-blog" type="submit" class="btn btn-danger btn-lg px-4">
                                Delete
                            </button>
                        </form>

                        <a asp-controller="Blog" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary btn-lg px-4">
                            Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>