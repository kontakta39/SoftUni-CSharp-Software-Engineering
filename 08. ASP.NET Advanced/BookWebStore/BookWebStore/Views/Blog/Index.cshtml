@using BookWebStore.ViewModels
@model IEnumerable<BlogIndexViewModel>

@{
    ViewData["Title"] = "Blogs";
}

@if (TempData["ErrorMessage"] != null)
{
    <div id="errorAlert" class="alert alert-danger text-center">
        <p class="m-0">@TempData["ErrorMessage"]</p>
    </div>
    <script>setTimeout(() => { const e=document.getElementById('errorAlert'); if(e){ e.style.transition='opacity 0.5s'; e.style.opacity='0'; setTimeout(() => e.remove(), 500); } }, 3000);</script>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>@ViewData["Title"]</h1>
    @if (User.IsInRole("Administrator"))
    {
        <a asp-controller="Blog" asp-action="Add" class="btn btn-primary rounded-pill">
            <i class="fas fa-plus me-1"></i> Add blog
        </a>
    }
</div>
<hr class="mb-4" />

@if (!Model.Any())
{
    <h3 class="text-start">There are no blogs created yet.</h3>
}
else
{
    List<IGrouping<string, BlogIndexViewModel>> groupedBlogs = Model
        .OrderBy(b => b.Title)
        .GroupBy(b => b.Title.Substring(0, 1).ToUpper())
        .OrderBy(g => g.Key)
        .ToList();

    foreach (var group in groupedBlogs)
    {
        <h3 class="text-start mt-5 text-dark">Blogs starting with letter "<strong>@group.Key</strong>"</h3>
        <hr class="mb-4" />

        <div class="row g-4">
            @foreach (var blog in group.OrderBy(b => b.Title))
            {
                <div class="col-sm-6 col-md-3 me-3">
                    <div class="card h-100 shadow-sm border border-1 border-secondary rounded-4 overflow-hidden bg-light bg-opacity-75">
                        <a asp-controller="Blog" asp-action="Details" asp-route-id="@blog.Id" class="text-decoration-none text-dark">
                            <div class="position-relative overflow-hidden" style="height: 200px;">
                                <img src="@(!string.IsNullOrEmpty(blog.ImageUrl) ? blog.ImageUrl : Url.Content("~/img/blog-no-image-available.jpg"))"
                                        class="card-img-top w-100 h-100 object-fit-cover"
                                        alt="Blog Image Not Available"
                                        onerror="this.onerror=null; this.src='@Url.Content("~/img/blog-no-image-available.jpg")';" />
                                <div class="position-absolute top-0 start-0 bg-secondary bg-opacity-75 text-white px-2 py-1 rounded-bottom-end">
                                    <small class="fw-semibold">@blog.Publisher</small>
                                </div>
                            </div>
                            <div class="card-body text-center">
                                <h5 class="card-title fw-bold">@blog.Title</h5>
                                <h6 class="card-text text-muted fst-italic mb-0">Read more &rarr;</h6>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    }
}