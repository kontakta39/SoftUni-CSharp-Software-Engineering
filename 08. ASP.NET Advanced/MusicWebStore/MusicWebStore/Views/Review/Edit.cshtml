@using MusicWebStore.ViewModels
@model ReviewEditViewModel

@{
    ViewData["Title"] = "Edit review";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="AlbumId" value="@Model.AlbumId" />
            <div class="mb-2">
                <label asp-for="@Model.AlbumTitle" class="form-label-add-edit">You are editing your review for the album:</label>
                <input type="text" asp-for="AlbumTitle" class="form-control" readonly />
            </div>

            <div class="mb-2">
                <label asp-for="@Model.Rating" class="form-label-add-edit">Rating</label>
                <select asp-for="@Model.Rating" class="form-control" aria-required="true">
                    <option value="">Select rating</option>
                    @for (int i = 1; i <= 5; i++)
                    {
                        <option value=@i> @i star@(i > 1 ? "s" : "")</option>
                    }
                </select>
                <span asp-validation-for="@Model.Rating" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.ReviewText" class="form-label-add-edit">Review</label>
                <textarea asp-for="@Model.ReviewText" class="form-control" aria-required="true" rows="5" placeholder="Tell us what you think about the album..."></textarea>
                <span asp-validation-for="@Model.ReviewText" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <input class="btn btn-warning btn-dark-text w-100 py-2 fw-bold rounded" type="submit" value="Submit" />
            </div>
        </form>
    </div>
</div>