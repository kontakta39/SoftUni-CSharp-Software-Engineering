@using MusicWebStore.ViewModels
@model ArtistEditViewModel

@{
    ViewData["Title"] = "Artist";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">

            <div class="mb-2">
                <label asp-for="@Model.Name" class="form-label-add-edit">Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="false" placeholder="Enter name" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-sm-6 mb-2">
                    <label asp-for="Nationality" class="form-label-add-edit">Nationality</label>
                    <select asp-for="Nationality" class="form-control" asp-items="@(new SelectList(Model.NationalityOptions))">
                        <option value="">Select nationality</option>
                    </select>
                </div>
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.BirthDate" class="form-label-add-edit">Birth Date (Optional)</label>
                    <input asp-for="@Model.BirthDate" class="form-control" aria-required="true" value="@Model.BirthDate" />
                    <span asp-validation-for="@Model.BirthDate" class="text-danger"></span>
                </div>

            </div>

            <div class="row">
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.GenreId" class="form-label-add-edit">Genre</label>
                    <select asp-for="@Model.GenreId" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.Genres, "Id", "Name"))">
                        <option value="">Select genre</option>
                    </select>
                    <span asp-validation-for="@Model.GenreId" class="text-danger"></span>
                </div>
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.Website" class="form-label-add-edit">Website</label>
                    <input asp-for="@Model.Website" class="form-control" aria-required="false" placeholder="Enter website (optional)" />
                </div>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.ImageFile" class="form-label-add-edit">Upload Image</label>
                <div class="input-group">
                    <!-- Text input field for displaying the selected file name -->
                    <input type="text" class="form-control" id="fileName" placeholder="No file chosen" disabled />

                    <!-- Hidden file input element -->
                    <input type="file" asp-for="@Model.ImageFile" class="d-none" id="imageFileInput" onchange="document.getElementById('fileName').value = this.files[0].name" />

                    <!-- Button to trigger file input -->
                    <button class="btn btn-outline-secondary" type="button" onclick="document.getElementById('imageFileInput').click()">Upload</button>
                </div>
            </div>

            <div class="mb-2">
                <label>Current Image</label>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img id="currentImage" src="@Url.Content("~/img/" + Model.ImageUrl)" alt="Current Artist Image" style="max-width: 150px; max-height: 150px; object-fit: cover;" />
                    <input type="hidden" id="artistId" value="@Model.Id" />
                    <!-- Clear Button -->
                    <button type="button" class="btn btn-danger" id="clearImageBtn">Clear</button>
                }
                else
                {
                    <img id="currentImage" src="~/img/artist-no-image-available.jpg" alt="Current Artist Image" style="max-width: 150px; max-height: 150px; object-fit: cover;" />
                }
            </div>

            <div class="mb-2">
                <label asp-for="@Model.Biography" class="form-label-add-edit">Biography</label>
                <textarea asp-for="@Model.Biography" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="@Model.Biography" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <input class="btn btn-warning btn-dark-text w-100 py-2 fw-bold rounded" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

<!-- Link to external JavaScript file -->
<script src="~/js/clearImage.js"></script>