@using MusicWebStore.ViewModels.Genre;
@model GenreDeleteViewModel


@{
    ViewData["Title"] = "Delete Genre";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.Name</h3>
                <p class="text-danger mt-3">Are you sure you want to delete @(Model.Name)?</p>
                <form asp-action="Delete" method="post">
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                </form>
            </div>
        </div>
    </div>
</div> 