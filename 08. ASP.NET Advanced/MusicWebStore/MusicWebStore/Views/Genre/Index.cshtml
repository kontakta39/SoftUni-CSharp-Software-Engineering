@using MusicWebStore.ViewModels
@model IEnumerable<GenreIndexViewModel>

@{
    ViewData["Title"] = "Genre";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    @if (User.IsInRole("Administrator"))
    {
        <a asp-controller="Genre" asp-action="Add" class="btn btn-primary"><i class="fas fa-plus"></i>Add genre</a>
    }
</div>
<hr />

@if (Model.Count() == 0)
{
    <h4 class="text-start">There are no registered users.</h4>
}
else
{
    <div class="row text-center">
        @foreach (var genre in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100" style="width: 100%;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@genre.Name</h5>
                        @if (User.IsInRole("Administrator"))
                        {
                            <div class="d-flex justify-content-between mt-auto">
                                <a asp-controller="Genre" asp-action="Edit" asp-route-id="@genre.Id" class="btn btn-warning me-2 w-50">Edit</a>
                                <a asp-controller="Genre" asp-action="Delete" asp-route-id="@genre.Id" class="btn btn-info me-2 w-50">Delete</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}