@using MusicWebStore.ViewModels.Genre;
@model IEnumerable<GenreIndexViewModel>

@{
    ViewData["Title"] = "Genre List";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    <a asp-controller="Genre" asp-action="Add" class="btn btn-primary"><i class="fas fa-plus"></i>Add Genre</a>
</div>
<hr />

<div class="row text-center">
    @foreach (var genre in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100" style="width: 100%;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@genre.Name</h5>
                    <div class="d-flex justify-content-between mt-auto">
                        <a asp-controller="Genre" asp-action="Edit" asp-route-id="@genre.Id" class="btn btn-warning w-100">Edit</a>
                        <a asp-controller="Genre" asp-action="Delete" asp-route-id="@genre.Id" class="btn btn-info w-100">Delete</a>
                
                    </div>
                </div>
            </div>
        </div>
    }
</div>